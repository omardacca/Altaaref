<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Altaaref.Views.MutualHelp.NewHelpRequest">

    <Grid Padding="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Text="Message" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
        <Editor Grid.Row="0" Grid.Column="1" VerticalOptions="Center" HeightRequest="200"
                Text="{Binding NewHelpRequest.Message}" />

        <Label Text="Is General" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
        <Switch IsToggled="{Binding NewHelpRequest.IsGeneral}" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start"/>

        <Button Text="Submit" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                Command="{Binding HandleSubmit}"/>

    </Grid>

</ContentPage>