<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Altaaref.Views.Hitchhicking.HitchhickingMainPage"
             Title="Hitchhicking Main Page">
    <ContentPage.Content>
        <ScrollView>
            
            <StackLayout Padding="15">
                <Label Text="{Binding Lat}" />
                <Label Text="{Binding Long}" />

                <Button Command="{Binding GetLoc}" Text="Get Location" />
                <Button Command="{Binding AddRideCommand}" Text="Add Ride" />
                <Button Command="{Binding FindRideCommand}" Text="Find Ride" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>